  <style>
  body{
    background-image: url(<%= asset_path 'WecVz72.png' %>);
  }
  .container{
    border: 3px solid white;
    margin: auto;
    width: 40%;
    padding: 10px;
    text-align: center;
    backdrop-filter: blur(3px);
  }
  .footer{
    margin: auto;
    text-align: center;
  }
